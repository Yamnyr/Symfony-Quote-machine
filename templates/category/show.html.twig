{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Categorie {{ category.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary m-2" href="{{ path('app_category_index') }}">retour Ã  la liste</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-outline-warning m-2" href="{{ path('app_category_edit', {'id': category.id}) }}">modifier</a>
        <a {{ include('category/_delete_form.html.twig') }} </a>
    {% endif %}
    <div class="example-wrapper">
        <h1><strong>Liste des citations venant de {{ category.name }}</strong></h1>
        <ul>
            {% for quote in category.quotes %}
                <li><strong>{{ quote.content }} </strong> </br> by
                    <p class="text-muted">--{{ quote.meta }}&nbsp &nbsp
                        <a href="/category/{{ quote.category.id }}" type="button"
                           class="btn btn-sm btn-dark">{{ quote.category }}</a><br>
                        par : {{ quote.author.name }} </br>
                        {% if is_granted('QUOTE_EDIT', quote) %}
                            <a type="button" class="btn btn-outline-warning m-2"
                               href="/quote/{{ quote.id }}/edit">modifier</a>
                        {% endif %}
                        {% if is_granted('QUOTE_DELETE', quote) %}
                            <a type="button" class="btn btn-outline-danger m-2" href="/quote/{{ quote.id }}/delete">supprimer</a>
                        {% endif %}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
