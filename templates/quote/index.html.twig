{% extends 'base.html.twig' %}

{% block title %}Liste des citations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
       <h1>citations:</h1>
        <ul>
            {%  for quote in quotes %}
                <li>{{ quote.content }} </br>by <p class="text-muted">--{{ quote.meta }} <a href="/category/{{ quote.category.id }}" type="button" class="btn btn-sm btn-dark">{{ quote.category }}</a> <a href="/quote/{{ quote.id }}/edit">modifier</a>|<a href="/quote/{{ quote.id }}/delete">supprimer</a></></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
